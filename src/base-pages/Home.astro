---
import BaseLayout from "../layouts/BaseLayout.astro";
import Carousel from "../components/landing/Carousel.astro";
const { t } = Astro.props;
const productsLink = `${import.meta.env.BASE_URL}/${t.langPrefix}products`;
const contactLink = `${import.meta.env.BASE_URL}/${t.langPrefix}contact`;
---

<BaseLayout t={t}>
  <!-- Hero -->
  <header class="relative w-full overflow-hidden">
    <div class="absolute inset-0 -z-10 bg-gradient-to-br from-blue-900 via-slate-900 to-slate-800">
      <div class="absolute left-1/2 top-0 -translate-x-1/2 blur-2xl opacity-40" style="width: 80vw; height: 40vw; background: radial-gradient(circle at 50% 0%, #2563eb 0%, transparent 70%);"></div>
      <div class="absolute right-0 bottom-0 blur-3xl opacity-30" style="width: 40vw; height: 40vw; background: radial-gradient(circle at 100% 100%, #3b82f6 0%, transparent 70%);"></div>
    </div>
    <div class="max-w-6xl mx-auto py-32 px-4 flex flex-col lg:flex-row items-center justify-between gap-12">
      <div class="flex-1 flex justify-center items-center mt-12 lg:mt-0">
        <img src="/3dstation_mk/Logo3D.png" alt="3D Station Logo" class="w-100 h-100 opacity-70 object-contain" loading="eager" />
      </div>
      <div class="flex-1 text-center lg:text-left flex flex-col items-center lg:items-start">
        <span class="inline-block mb-4 px-4 py-1 rounded-full bg-slate-800/70 text-blue-400 font-semibold tracking-widest uppercase text-xs shadow-md backdrop-blur">{t.hero.label}</span>
        <h1 class="text-4xl md:text-6xl font-extrabold text-white drop-shadow-lg mb-4">{t.hero.title}</h1>
        <p class="text-lg md:text-2xl text-slate-200 mb-8 max-w-2xl font-medium">{t.hero.description}</p>
        <div class="flex flex-wrap justify-center lg:justify-start gap-4">
          <a href={productsLink} class="px-8 py-3 rounded-full bg-blue-600 hover:bg-blue-700 text-white font-bold text-lg shadow-lg transition-colors duration-200">{t.hero.browseProducts}</a>
          <a href={contactLink} class="px-8 py-3 rounded-full bg-slate-800/70 hover:bg-slate-700 text-blue-300 font-semibold text-lg shadow-md transition-colors duration-200 backdrop-blur">{t.hero.learnMore}</a>
        </div>
      </div>
    </div>
  </header>

  <!-- Products -->
  <Carousel />

  <!-- Bring Your Own Design -->
  <section class="relative py-50 text-center overflow-hidden">
    <div class="max-w-2xl mx-auto px-4 flex flex-col items-center">
      <h2 class="text-4xl font-extrabold mb-2 text-slate-100 drop-shadow-lg">{t.bringYourOwn.title}</h2>
      <p class="text-lg mb-8 text-slate-300 max-w-xl">{t.bringYourOwn.description}</p>
      <a href={contactLink} class="inline-block px-10 py-4 bg-blue-600 text-gray-50 font-bold rounded-full shadow-lg hover:bg-blue-700 transition text-lg">{t.bringYourOwn.getYourDesignPrinted}</a>
    </div>
  </section>
</BaseLayout> 