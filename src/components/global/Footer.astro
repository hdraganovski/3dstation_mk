---
const { t } = Astro.props;
const base = import.meta.env.BASE_URL;
---
<footer class="bg-slate-900 text-slate-200 py-10 mt-16">
  <div class="flex flex-col items-center space-y-4">
    <div class="flex space-x-6 text-2xl">
      <a href="https://www.instagram.com/3dstation.mk" target="_blank" rel="noopener" aria-label="Instagram" class="hover:text-pink-400 transition">
        <!-- Lucide Instagram -->
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><rect width="20" height="20" x="2" y="2" rx="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>
      </a>
      <a href="https://www.facebook.com/profile.php?id=61570626922619" target="_blank" rel="noopener" aria-label="Facebook" class="hover:text-blue-400 transition">
        <!-- Lucide Facebook -->
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
      </a>
      <a href="mailto:3dstation.mk@gmail.com" aria-label="Email" class="hover:text-green-400 transition">
        <!-- Lucide Mail -->
        <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><rect x="3" y="5" width="18" height="14" rx="2"/><polyline points="3 7 12 13 21 7"/></svg>
      </a>
    </div>
    <div class="text-sm text-slate-400 mt-2">{t.footer.allRightsReserved}</div>
  </div>
</footer>
