---
const { t } = Astro.props;
const base = import.meta.env.BASE_URL;
---

<nav
  class="sticky top-6 z-50 mx-auto w-[95%] rounded-2xl bg-slate-900/70 backdrop-blur-md shadow-lg flex items-center justify-between px-8 py-3 mb-8 border border-slate-800/60"
  style="box-shadow: 0 4px 24px 0 rgba(30,41,59,0.12);"
>
  <div class="flex items-center gap-3">
    <a href={base} class="flex items-center">
      <img
        src={`${base}/Logo3D.png`}
        alt="3D Station Logo"
        class="h-10 w-auto object-contain"
      />
    </a>
  </div>
  <ul class="flex gap-6 text-slate-100 font-medium">
    <li>
      <a
        href={`${base}/${t.langPrefix}products`}
        class="hover:text-blue-400 transition-colors">{t.navbar.products}</a>
    </li>
    <li>
      <a
        href={`${base}/${t.langPrefix}contact`}
        class="hover:text-blue-400 transition-colors">{t.navbar.contact}</a>
    </li>
    <li>
      <select
        class="bg-slate-900 text-slate-100 rounded px-2 py-1 ml-2 focus:outline-none focus:ring-2 focus:ring-blue-400"
        onchange="if(this.value) window.location.href=this.value"
        aria-label="Select language"
        value={`${base}`}
      >
        <option value="" selected disabled hidden>{t.lang.toUpperCase()}</option>
        <option value={`${base}/en/`}>EN</option>
        <option value={`${base}`}>MK</option>
      </select>
    </li>
  </ul>
</nav>
