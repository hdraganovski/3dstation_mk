---
import { Image } from "astro:assets";
import p1 from "@/images/1.jpeg";
import p2 from "@/images/2.jpeg";
import p3 from "@/images/3.jpeg";
import p4 from "@/images/4.jpeg";
import p5 from "@/images/5.jpeg";
import p6 from "@/images/6.jpeg";
const base = import.meta.env.BASE_URL || '/3dstation_mk/';
const products = [
  {
    url: "#_",
    title: "Dual-Port Bit Driver",
    subtitle: "Cobalt blue CNC finish",
    price: "$59",
    mainImage: `${base}images/1.jpeg`,
    images: [`${base}images/1.jpeg`],
  },
  {
    url: "#_",
    title: "Analog Audio Control Hub",
    subtitle: "Soft matte with ring LEDs",
    price: "$79",
    mainImage: `${base}images/2.jpeg`,
    images: [`${base}images/2.jpeg`],
  },
  {
    url: "#_",
    title: "Laser Range Unit",
    subtitle: "Black anodized edge + sensor",
    price: "$110",
    mainImage: `${base}images/3.jpeg`,
    images: [`${base}images/3.jpeg`],
  },
  {
    url: "#_",
    title: "Smart Object Desk Set",
    subtitle: "Minimalist modular kit",
    price: "$129",
    mainImage: `${base}images/4.jpeg`,
    images: [`${base}images/4.jpeg`],
  },
  {
    url: "#_",
    title: "Modular Synth Box",
    subtitle: "Magnetic knobs, dual input",
    price: "$149",
    mainImage: `${base}images/5.jpeg`,
    images: [`${base}images/5.jpeg`],
  },
  {
    url: "#_",
    title: "Compact Action Camera",
    subtitle: "Transparent shell, neon ring",
    price: "$189",
    mainImage: `${base}images/6.jpeg`,
    images: [`${base}images/6.jpeg`],
  },
];
---

<section>
  <div
    class="grid grid-cols-1 gap-6 lg:gap-y-24 md:grid-cols-2 lg:grid-cols-3 py-12"
  >
    {
      products.map((product) => (
        <figure class="relative ">
          <a href={product.url} aria-hidden="true" class="absolute inset-0" />
          <Image
            width="800"
            height="800"
            alt={product.title}
            src={product.mainImage}
            class="w-full rounded-3xl shadow aspect-12/9 object-cover object-center"
          />
          <div class="mt-2 flex justify-between px-6">
            <div>
              <p class="mt-1 text-sm font-medium  text-base-900">
                {product.subtitle}
              </p>
              <h3 class="text-xs text-base-500">{product.title}</h3>
            </div>
            <p class="text-base text-orange-600">{product.price}</p>
          </div>
        </figure>
      ))
    }
  </div>
</section>
