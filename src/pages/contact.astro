---
import BaseLayout from "../layouts/BaseLayout.astro";
import ContactForm from "../components/ContactForm.astro";
---

<BaseLayout>
  <main class="bg-slate-900 text-slate-100 flex flex-col items-center justify-center py-16">
    <h1 class="text-4xl font-extrabold mb-8">Contact Us</h1>
    <div class="w-full max-w-4xl flex flex-col md:flex-row gap-8">
      <!-- Social and Phone Links -->
      <div class="flex-1 flex flex-col space-y-4 justify-center items-center bg-slate-800 rounded-lg p-6 shadow">
        <a href="https://instagram.com/" target="_blank" rel="noopener" class="flex items-center space-x-3 hover:text-pink-400 transition">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><rect width="20" height="20" x="2" y="2" rx="5"/><path d="M16 11.37A4 4 0 1 1 12.63 8 4 4 0 0 1 16 11.37z"/><line x1="17.5" x2="17.51" y1="6.5" y2="6.5"/></svg>
          <span>Instagram</span>
        </a>
        <a href="https://facebook.com/" target="_blank" rel="noopener" class="flex items-center space-x-3 hover:text-blue-400 transition">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M18 2h-3a5 5 0 0 0-5 5v3H7v4h3v8h4v-8h3l1-4h-4V7a1 1 0 0 1 1-1h3z"/></svg>
          <span>Facebook</span>
        </a>
        <a href="tel:+1234567890" class="flex items-center space-x-3 hover:text-yellow-400 transition">
          <svg xmlns="http://www.w3.org/2000/svg" class="w-6 h-6" fill="none" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2"><path d="M13.832 16.568a1 1 0 0 0 1.213-.303l.355-.465A2 2 0 0 1 17 15h3a2 2 0 0 1 2 2v3a2 2 0 0 1-2 2A18 18 0 0 1 2 4a2 2 0 0 1 2-2h3a2 2 0 0 1 2 2v3a2 2 0 0 1-.8 1.6l-.468.351a1 1 0 0 0-.292 1.233 14 14 0 0 0 6.392 6.384"/></svg>
          <span>+1 234 567 890</span>
        </a>
      </div>
      <ContactForm />
    </div>
  </main>
</BaseLayout>
