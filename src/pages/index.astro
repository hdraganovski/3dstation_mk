---
import BaseLayout from "../layouts/BaseLayout.astro";
import Carousel from "../components/landing/Carousel.astro";
---

<BaseLayout>
  <!-- Hero -->
  <header class="relative w-full overflow-hidden">
    <div class="absolute inset-0 -z-10 bg-gradient-to-br from-blue-900 via-slate-900 to-slate-800">
      <div class="absolute left-1/2 top-0 -translate-x-1/2 blur-2xl opacity-40" style="width: 80vw; height: 40vw; background: radial-gradient(circle at 50% 0%, #2563eb 0%, transparent 70%);"></div>
      <div class="absolute right-0 bottom-0 blur-3xl opacity-30" style="width: 40vw; height: 40vw; background: radial-gradient(circle at 100% 100%, #3b82f6 0%, transparent 70%);"></div>
    </div>
    <div class="max-w-6xl mx-auto py-32 px-4 flex flex-col lg:flex-row items-center justify-between gap-12">
      <div class="flex-1 flex justify-center items-center mt-12 lg:mt-0">
        <svg class="w-60 h-60 opacity-70" viewBox="0 0 160 160" fill="none" xmlns="http://www.w3.org/2000/svg">
          <circle cx="80" cy="80" r="70" stroke="#2563eb" stroke-width="4" fill="url(#grad1)"/>
          <defs>
            <radialGradient id="grad1" cx="0.5" cy="0.5" r="0.5" fx="0.5" fy="0.5">
              <stop offset="0%" stop-color="#2563eb" stop-opacity="0.2"/>
              <stop offset="100%" stop-color="#2563eb" stop-opacity="0"/>
            </radialGradient>
          </defs>
        </svg>
      </div>
      
      <div class="flex-1 text-center lg:text-left flex flex-col items-center lg:items-start">
        <span class="inline-block mb-4 px-4 py-1 rounded-full bg-slate-800/70 text-blue-400 font-semibold tracking-widest uppercase text-xs shadow-md backdrop-blur">Welcome to</span>
        <h1 class="text-4xl md:text-6xl font-extrabold text-white drop-shadow-lg mb-4">
          3D Station
        </h1>
        <p class="text-lg md:text-2xl text-slate-200 mb-8 max-w-2xl font-medium">
          Elevate your space with stunning 3D-printed creations. Discover unique, high-quality products designed for the modern world.
        </p>
        <div class="flex flex-wrap justify-center lg:justify-start gap-4">
          <a href="/3dstation_mk/products" class="px-8 py-3 rounded-full bg-blue-600 hover:bg-blue-700 text-white font-bold text-lg shadow-lg transition-colors duration-200">
            Browse Products
          </a>
          <a href="/3dstation_mk/about" class="px-8 py-3 rounded-full bg-slate-800/70 hover:bg-slate-700 text-blue-300 font-semibold text-lg shadow-md transition-colors duration-200 backdrop-blur">
            Learn More
          </a>
        </div>
      </div>
      <!-- Right: SVG/Visual -->
      
    </div>
  </header>

  <!-- Products -->
  <Carousel />

  <!-- Bring Your Own Design -->
  <section class="relative py-50 text-center overflow-hidden">
    <!-- Decorative SVG -->
    <div class="max-w-2xl mx-auto px-4 flex flex-col items-center">
      <h2 class="text-4xl font-extrabold mb-2 text-slate-100 drop-shadow-lg">Bring Your Own Design</h2>
      <p class="text-lg mb-8 text-slate-300 max-w-xl">
        Have a unique idea or a custom 3D model? Upload your design and let us bring it to life with our high-quality 3D printing service. Fast, reliable, and tailored to your needs!
      </p>
      <a href="/3dstation_mk/contact" class="inline-block px-10 py-4 bg-blue-600 text-gray-50 font-bold rounded-full shadow-lg hover:bg-blue-700 transition text-lg">
        Get Your Design Printed
      </a>
    </div>
  </section>
</BaseLayout>
